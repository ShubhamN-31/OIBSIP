<body>

  <div class="container">
    <h2>üå°Ô∏è Temperature Converter</h2>

    <div class="converter">
      <input type="number" id="temperature" placeholder="Enter temperature" />

      <div>
        <label for="unitFrom">From:</label>
        <select id="unitFrom">
          <option value="celsius">Celsius (¬∞C)</option>
          <option value="fahrenheit">Fahrenheit (¬∞F)</option>
          <option value="kelvin">Kelvin (K)</option>
        </select>
      </div>

      <div>
        <label for="unitTo">To:</label>
        <select id="unitTo">
          <option value="celsius">Celsius (¬∞C)</option>
          <option value="fahrenheit">Fahrenheit (¬∞F)</option>
          <option value="kelvin">Kelvin (K)</option>
        </select>
      </div>

      <button onclick="convertTemperature()">Convert</button>

      <div id="result">Converted temperature will appear here</div>
    </div>
  </div>

  <script>
    function convertTemperature() {
      const tempInput = document.getElementById('temperature').value;
      const fromUnit = document.getElementById('unitFrom').value;
      const toUnit = document.getElementById('unitTo').value;
      const resultDiv = document.getElementById('result');

      const temp = parseFloat(tempInput);
      if (isNaN(temp)) {
        resultDiv.textContent = "‚ùó Please enter a valid number.";
        resultDiv.style.color = "red";
        return;
      }

      resultDiv.style.color = "#333"; 

      let tempInKelvin;

      switch (fromUnit) {
        case 'celsius':
          tempInKelvin = temp + 273.15;
          break;
        case 'fahrenheit':
          tempInKelvin = (temp - 32) * 5 / 9 + 273.15;
          break;
        case 'kelvin':
          tempInKelvin = temp;
          break;
      }

      let convertedTemp;

      switch (toUnit) {
        case 'celsius':
          convertedTemp = tempInKelvin - 273.15;
          break;
        case 'fahrenheit':
          convertedTemp = (tempInKelvin - 273.15) * 9 / 5 + 32;
          break;
        case 'kelvin':
          convertedTemp = tempInKelvin;
          break;
      }

      const unitSymbols = {
        celsius: "¬∞C",
        fahrenheit: "¬∞F",
        kelvin: "K"
      };

      resultDiv.textContent = `‚úÖ Result: ${convertedTemp.toFixed(2)} ${unitSymbols[toUnit]}`;
    }
  </script>

